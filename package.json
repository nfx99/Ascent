{
    "name": "ascent",
    "version": "1.0.0",
    "description": "Self-development and learning assistant",
    "main": "dist/main.js",
    "scripts": {
        "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.config.js",
        "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.config.js",
        "build": "npm run build-main && npm run build-renderer",
        "start": "cross-env NODE_ENV=development concurrently -k \"webpack serve --config webpack.renderer.config.js\" \"webpack --config webpack.main.config.js --watch\" \"wait-on tcp:3001 && electron .\"",
        "dev": "npm start",
        "clean": "rimraf dist",
        "rebuild": "npm run clean && npm run build",
        "dev:fast": "cross-env NODE_ENV=development FAST_REFRESH=true concurrently -k \"webpack serve --config webpack.renderer.config.js --mode development\" \"webpack --config webpack.main.config.js --watch --mode development\" \"wait-on tcp:3001 && electron .\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@emotion/react": "^11.11.3",
        "@emotion/styled": "^11.11.0",
        "@mui/icons-material": "^5.15.3",
        "@mui/material": "^5.15.3",
        "date-fns": "^3.0.6",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^7.6.0"
    },
    "devDependencies": {
        "@types/node": "^20.4.2",
        "@types/react": "^18.2.14",
        "@types/react-dom": "^18.2.7",
        "buffer": "^6.0.3",
        "concurrently": "^8.0.1",
        "copy-webpack-plugin": "^13.0.0",
        "cross-env": "^7.0.3",
        "crypto-browserify": "^3.12.1",
        "electron": "^27.0.0",
        "electron-builder": "^24.6.0",
        "html-webpack-plugin": "^5.5.3",
        "os-browserify": "^0.3.0",
        "path-browserify": "^1.0.1",
        "rimraf": "^5.0.5",
        "stream-browserify": "^3.0.0",
        "ts-loader": "^9.4.4",
        "typescript": "^5.3.3",
        "wait-on": "^7.2.0",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.0"
    }
}
